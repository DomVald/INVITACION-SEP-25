<section
  class="w-full bgx-primary py-10 flex flex-col items-center text-center relative"
>
  <h2 class="text-2xl font-serif txt-complementary mb-6">
    Confirmar asistencia
  </h2>

  <form
    id="rsvpForm"
    class="w-3/4 max-w-md flex flex-col space-y-4 txt-secondary font-serif"
  >
    <!-- Campo adultos -->
    <div class="flex flex-col">
      <label for="adults" class="mb-1 text-lg font-medium"
        >Número de adultos *</label
      >
      <input
        id="adults"
        name="adults"
        type="number"
        required
        min="1"
        class="border border-[#a0522d] rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#a0522d]"
        placeholder="Ejemplo: 2"
      />
    </div>

    <!-- Campo niños -->
    <div class="flex flex-col">
      <label for="children" class="mb-1 text-lg font-medium"
        >Número de niños</label
      >
      <input
        id="children"
        name="children"
        type="number"
        min="0"
        class="border border-[#a0522d] rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#a0522d]"
        placeholder="Ejemplo: 1"
      />
    </div>

    <!-- Botón confirmar -->
    <button
      type="submit"
      class="bgx-complementary text-white font-medium font-serif py-3 px-6 rounded-full shadow-md hover:bg-[#8b3e1e] transition mt-4 mb-18"
    >
      Confirmar asistencia
    </button>
  </form>
  <svg
    class="absolute -bottom-1 left-0 w-full"
    viewBox="0 0 1440 150"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M0,0 C360,100 1080,0 1440,100 L1440,150 L0,150 Z"
      class="svg-secondary"></path>
  </svg>
</section>

<!-- Script para WhatsApp redirect -->
<script type="module" defer>
  const form = document.getElementById("rsvpForm");
  if (form) {
    form.addEventListener("submit", (e) => {
      e.preventDefault();

      const adults = document.getElementById("adults").value;
      const children = document.getElementById("children").value || 0;

      const phone = "521234567890"; // Reemplaza con el número de WhatsApp
      const message = `Hola, confirmo mi asistencia a la boda:\n- Adultos: ${adults}\n- Niños: ${children}`;

      const url = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
      window.location.href = url;
    });
  }
</script>
