---
// HeroSection.astro
// Componente de sección principal con foto de los novios
// Mobile first, responsive, minimalista y elegante
---

<section class="relative w-full fixed">
  <!-- Imagen principal de los novios -->
  <div class="w-full overflow-hidden">
    <img
      src="/images/img1.webp"
      alt="Novios"
      class="w-full h-auto object-cover"
    />
  </div>

  <!-- Máscara inferior estilo papel rasgado -->
  <svg
    class="absolute -bottom-1 left-0 w-full"
    viewBox="0 0 1440 150"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M0,0 C360,100 1080,0 1440,100 L1440,150 L0,150 Z" fill="#FFFCF5"
    ></path>
  </svg>

  <img
    src="images/fg-r.webp"
    alt="flowers"
    class="absolute fade-in -bottom-20 z-10 -right-15 w-40 overflow-x-hidden"
  />
  <img
    src="images/fg-l.webp"
    alt="flowers"
    class="absolute fade-in -bottom-20 z-10 -left-15 w-40 overflow-x-hidden"
  />
</section>

<style lang="postcss">
/* Colores personalizados para Tailwind */
.text-terra { color: #D35400; }       /* Terracota */
.text-olive { color: #556B2F; }      /* Verde olivo */
.bg-terracota { background-color: #D35400; }
.text-beige { color: #FFFCF5; }
</style>
